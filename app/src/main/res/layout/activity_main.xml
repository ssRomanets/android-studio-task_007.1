<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Поле ввода информации."
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"/>

    <Button
        android:id="@+id/buttonOutputInfoBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вывод информации"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textET"
        app:layout_constraintVertical_bias="0.01"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/textTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Поле вывода информации."
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOutputInfoBTN"
        app:layout_constraintVertical_bias="0.01"/>

    <Button
        android:id="@+id/buttonRemoveInfoBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить данные"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTV"
        app:layout_constraintVertical_bias="0.01"
        android:orientation="horizontal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>